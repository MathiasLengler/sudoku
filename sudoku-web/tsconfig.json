{
  "compilerOptions": {
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext", // needed to have dynamic imports
    "lib": [
      "dom",
      "esnext"
    ],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "sourceMap": true,
    "jsx": "react",
    "target": "es2017"
  },
  "include": [
    "src/**/*"
  ]
}